<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="Theme.Salsabil" parent="Theme.Material3.Light.NoActionBar">
        <!-- Material 3 colors (use your palette or defaults) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/success</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar colors -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Salsabil.Splash" parent="Theme.Salsabil">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
    </style>

    <!-- Onboarding Theme -->
    <style name="Theme.Salsabil.Onboarding" parent="Theme.Salsabil">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
    </style>

</resources>
